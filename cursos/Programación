  <div class="content-box">
    <h2>Prueba tu código en C</h2>
    <textarea id="code">
#include <stdio.h>
int main() {
    printf("Hola desde C en GitHub Pages!\\n");
    return 0;
}
    </textarea>
    <br>
    <button onclick="runCode()">Ejecutar</button>
    <h3>Salida del programa:</h3>
    <pre id="output"></pre>
  </div>

  <!-- Motor C en WebAssembly -->
  <script src="https://bellard.org/quickjs/qjs-modules/c.js"></script>
  <script>
    async function runCode() {
      const code = document.getElementById("code").value;
      const output = document.getElementById("output");
      output.textContent = "Compilando...\n";

      try {
        const result = await CRunner.run(code);
        output.textContent = result.output;
      } catch (err) {
        output.textContent = "Error: " + err.message;
      }
    }
  </script>
